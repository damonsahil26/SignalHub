@section scripts {
    <script src="~/js/deathlyhallows.js" asp-append-version="true"></script>
}

<script>
    function goToAction(type) {
        var queryParam = type;
        var url = '@Url.Action("DeathlyHallowsRace", "Home")' + "?type=" + queryParam;
        $.ajax({
            url: url,
            type: 'GET',
            success: function (response) {
                // Handle success response
                console.log("Action called successfully!");
                console.log(response); // Do something with the response
            },
            error: function () {
                // Handle error response
                console.log("Error calling action.");
            }
        });
    };
</script>

<div class="row border p-1">
    <h3>Deathly Hallow Race </h3>

    <div class="col-4">
        <div>Invisibility Cloak - <span id="cloakCounter"></span></div>

    </div>
    <div class="col-4">
        <div>Resurrection Stone - <span id="stoneCounter"></span></div>

    </div>
    <div class="col-4">
        <div>Elder Wand - <span id="wandCounter"></span></div>
    </div>
    <hr />
    <p>Buttons to Vote :</p>
    <div class="container" style="text-align:center">
        <div class="row">
            <div class="col-4">
                <button onclick="goToAction('cloak')" class="btn btn-primary">Invisibility Cloak</button>
            </div>
            <div class="col-4">
                <button onclick="goToAction('stone')" class="btn btn-danger">Resurrection Stone</button>
            </div>
            <div class="col-4">
                <button onclick ="goToAction('wand')" class="btn btn-success">Elder Wand</button>
            </div>
        </div>
    </div>
</div>